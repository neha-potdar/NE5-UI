<div class="card">
  <div class="card-body">
    <h4 class="card-title mb-4">All Transactions</h4>
    <div class="card">
      <div class="card-body">
        <h4 class="card-title mb-4">Search Transactions</h4>
        <form id="search-form" class="mb-4">
          <div class="input-group">
            <input type="text" name="searchKeyword" class="form-control" placeholder="Search..." onkeyup="sendData(event)">
            <div class="input-group-append">
              <button type="submit" class="btn btn-primary">Search</button>
            </div>
          </div>
        </form>
    <script>
       function sendData(event) {
    event.preventDefault();
    const searchKeyword = event.target.value;
    const url = '/search';

    const formData = new FormData();
    formData.append('searchKeyword', searchKeyword);

    fetch(url, {
      method: 'POST',
      body: formData,
    })
      .then((response) => response.text())
      .then((data) => {
        document.getElementById('transactions-table').innerHTML = data;
      })
      .catch((error) => {
        console.error('Error fetching filtered data:', error);
      });
  }

  // Submit the form when the Search button is clicked
  document.getElementById('search-form').addEventListener('submit', (event) => {
    event.preventDefault();
    sendData(event);
  });
    </script>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col" style="width: 12.5%;">Transaction ID</th>
            <th scope="col" style="width: 12.5%;">Price</th>
            <th scope="col" style="width: 12.5%;">Type</th>
            <th scope="col" style="width: 12.5%;">Credit/Debit</th>
            <th scope="col" colspan="2" style="width: 12.5%;">Narration</th>
            <th scope="col" style="width: 12.5%;">Account Type</th>
            <th scope="col" style="width: 12.5%;">Time</th>
            <th scope="col" style="width: 12.5%;">Api Name</th>
          </tr>
        </thead>
        <tbody>
          <% transactions.forEach((item) => { %>
            <tr style="max-height: min-content;">
              <td class="text-truncate"><%= item.transaction_id %></td>
              <td  class="text-truncate">$ <%= item.price %></td>
              <td  class="text-truncate"><%= item.type %></td>
              <td  class="text-truncate"><%= item.credit_debit %></td>
              <td colspan="2" class="text-truncate"><%= item.narration %></td>
              <td  class="text-truncate"><%= item.account_type %></td>
              <td  class="text-truncate"><%= item.transaction_time %></td>
              <td  class="text-truncate"><%= item.api_name %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <div class="mt-3">
      <ul class="pagination pagination-rounded justify-content-center mb-0">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= currentPage - 1 %>">Previous</a>
          </li>
        <% } %>

        <% if (totalPages <= 10) { %>
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        <% } else { %>
          <% if (currentPage <= 5) { %>
            <% for (let i = 1; i <= 10; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
          <% } else if (currentPage > 5 && currentPage <= totalPages - 5) { %>
            <% for (let i = currentPage - 4; i <= currentPage + 5; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
          <% } else { %>
            <% for (let i = totalPages - 9; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
          <% } %>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= currentPage + 1 %>">Next</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</div>





  

